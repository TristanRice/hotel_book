extends base.pug
        
block main
    div(class="container")
        h1(class="header center teal-text text-lighten-2")
            | Book a room
        
        input(class="input_search_box", id="search_input"
            placeholder="City, town or village")
                                
        div(class="input-field col s12")
            div(class="select_flexbox")

                select(class="browser-default", name="people_amount")
                    option(value="" disabled selected)
                        | Number of beds

                    option(value="1")
                        | 1

                    option(value="2")
                        | 2

                    option(value="3")
                        | 3

                    option(value="4")
                        | 4+
                
                input(type="text", placeholder="choose your date", 
                    style="margin-left: 20px;", id="datepicker")
                
                button(class="btn waves-effect waves-light", type="submit", name="action", id="submit_button", style="width: 40%;")
                    | Submit
                    i(class="material-icons right fas fa-angle-double-right")


block append scripts
    script(src="/scripts/index/index.js")
